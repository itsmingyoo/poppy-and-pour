generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Test {
  id    Int     @id @default(autoincrement())
  email String  @unique
  text  String?

  @@map("poppy_and_pour.test")
}
