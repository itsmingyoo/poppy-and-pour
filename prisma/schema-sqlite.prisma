
// migration needs to be specific to this file path
//npx prisma migrate dev --schema ./postgres/schema-sqlite.prisma   <---- generate a migration for sqlite3

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client-sqlite"
}

datasource sqlite {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Test {
  id    Int     @id @default(autoincrement())
  email String  @unique
  text  String?
}
